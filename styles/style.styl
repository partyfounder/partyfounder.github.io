/*FUentes*/
@font-face
    font-family Antipasto
    src url('../rsc/fonts/Antipasto_regular.otf') format('opentype')
    
@font-face
    font-family MankSans
    src url('../rsc/fonts/MankSans.ttf') format('truetype')

/*Colores*/
rosa = #dd1d82

/*BACKGROUND FULL RESPONSIVE*/

body
    min-width 0px
    font-family 'MankSans'
/*
.bg
    background-position 50% 50%
    widows 100%
    min-height 100%
    background-size cover*/

nav
    width 100%
    height 70px
    position fixed
    z-index 20
    background-color rgba(255, 255, 255, 0.4)
    figure
        width 34px
        height 34px
        float left
    p
        font-size 30px
        font-family 'Antipasto'
        float left
        margin-top 13px
        
        
section 
    display block
.bg
    position relative
    overflow hidden
    width 100%
    text-align center
    top 0
    left 0
    bottom 0
    right 0
    img
        position relative
        z-index 1
        width 100%
        height auto
        display block
    div.text
        position absolute
        z-index 2
        width 100%
        display block
        top 0
        right 0
        bottom 0
        left 0
        text-align center
        div.vertical
            vertical-align middle
            margin 25% auto
            div.center
                margin-right auto
                margin-left auto
                float none
                h2
                    font-family inherit
                    color white
                
        
    
    


    

